        "secret": "ee1dd64b6adc89cf7e2c23099301ccc2c61b441064e9324d963c46902a85ec34",
        "callback_url": "http://redirect.uri",
        "confidential": true
      }
    },
    {
      "name": "List all applications",
      "description": "List all registered applications.",
      "resources": [
        {
          "method": "GET",
          "path": "/applications"
        }
      ],
      "attributes": [],
      "response": [
        {
          "id": 1,
