    {
      "name": "Global notification settings",
      "description": "Get current notification settings and email address.",
      "resources": [
        {
          "method": "GET",
          "path": "/notification_settings"
        }
      ],
      "attributes": [],
      "response": {
        "level": "participating",
        "notification_email": "admin@example.com"
      }
    },
