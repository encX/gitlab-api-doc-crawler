        {
          "method": "GET",
          "path": "/topics"
        }
      ],
      "attributes": [
        {
          "name": "page",
          "type": "integer",
          "required": false,
          "description": "Page to retrieve. Defaults to 1."
        },
        {
          "name": "per_page",
          "type": "integer",
          "required": false,
          "description": "Number of records to return per page. Defaults to 20."
        },
        {
          "name": "search",
          "type": "string",
          "required": false,
          "description": "Search topics against their name."
        },
        {
          "name": "without_projects",
          "type": "boolean",
          "required": false,
          "description": "Limit results to topics without assigned projects."
        }
