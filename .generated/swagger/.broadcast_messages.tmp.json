    "/broadcast_messages": {
      "post": {
        "summary": "Create a broadcast message",
        "description": "Create a new broadcast message.",
        "operationId": "createABroadcastMessage",
        "parameters": [
          {
            "name": "message",
            "in": "query",
            "description": "Message to display.",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "starts_at",
            "in": "query",
            "description": "Starting time (defaults to current time). Expected in ISO 8601 format (2019-03-15T08:00:00Z)",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "ends_at",
            "in": "query",
            "description": "Ending time (defaults to one hour from current time). Expected in ISO 8601 format (2019-03-15T08:00:00Z)",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "color",
            "in": "query",
            "description": "Background color hex code.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "font",
            "in": "query",
            "description": "Foreground color hex code.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "target_access_levels",
            "in": "query",
            "description": "Target access levels (roles) of the broadcast message.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "target_path",
            "in": "query",
            "description": "Target path of the broadcast message.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "broadcast_type",
            "in": "query",
            "description": "Appearance type (defaults to banner)",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "dismissable",
            "in": "query",
            "description": "Can the user dismiss the message?",
            "required": false,
